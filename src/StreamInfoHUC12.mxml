			<localControls:hucInfoBar height="100%" dataObj="{data[0]}" />
			<s:VGroup>
				<mx:HBox width="100%" backgroundColor="0xDDDDDD" verticalAlign="middle" paddingBottom="5" paddingLeft="5" paddingRight="5" paddingTop="5">
